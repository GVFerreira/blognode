<a href="/admin/categories/add"><button class="btn btn-success">Nova categoria</button></a>
<hr>
<h1>Lista de categorias</h1>

{{#each categories}}
    <div class="card  mt-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <p>Slug: {{slug}}</p>
            <p>Data de criação: {{date}}</p>
        </div>
    </div>
    {{else}}
{{/each}}


{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
{{/each}}

<h3>Nova postagem</h3>
<div class="card ">
    <div class="card-body">
        <form action="/admin/posts/new" method="post">
            <label for="title">Titulo:</label>
            <input type="text" name="title" class="form-control mb-4">

            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control mb-4" disabled="disabled">

            <label for="description">Descrição:</label>
            <input type="text" name="description" class="form-control mb-4">

            <label for="content">Conteúdo:</label>
            <textarea name="content" class="form-control mb-4" rows="8"></textarea>

            <label for="category">Categoria:</label>
            <select name="category" class="form-control">
                {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>

            <button type="submit" class="btn btn-success mt-4">Criar postagem</button>
            
        </form>
    </div>
</div>
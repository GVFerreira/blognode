{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
{{/each}}


<h3>Editar categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categories/new" method="POST">
            <label for="name">Nome:</label>
            <input type="text" name="name" id="name" class="form-control" value="{{category.nome}}">

            <label for="slug">Slug:</label>
            <input type="text" name="slug" id="slug" class="form-control" value="{{category.slug}}">
            <button type="submit" class="btn btn-success mt-4">Editar Categoria</button>
        </form>
    </div>
</div>